{% schema %}
{
  "name": "KS - Recently Viewed Init",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "limit",
      "label": "Limit products",
      "default": 40,
      "min": 10,
      "max": 100
    },
    {
      "type": "page",
      "id": "page",
      "label": "Page",
      "info": "The page to show the recently viewed products."
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "Recently Viewed"
    }
  ],
  "presets": [
    {
      "name": "KS - Recently Viewed Init"
    }
  ]
}
{% endschema %}
